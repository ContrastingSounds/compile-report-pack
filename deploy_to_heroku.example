heroku create your-application-name
heroku git:remote -a your-application-name

# REQUIRED ENVIRONMENT VARIABLES
heroku config:set FAST_HUB=https://your-application-name.herokuapp.com

heroku config:set LOOKERSDK_BASE_URL=https://your-instance.looker.com:19999
heroku config:set LOOKERSDK_CLIENT_ID=xxx
heroku config:set LOOKERSDK_CLIENT_SECRET=xxx
heroku config:set LOOKERSDK_VERIFY_SSL=True


# REQUIRED FOR EMAIL ACTIONS
heroku config:set SENDGRID_FROM_EMAIL=noreply@example.com
heroku config:set SENDGRID_API_KEY="xxxx"


# DO NOT CHANGE
git push heroku deploy-heroku:master
heroku ps:scale web=1
heroku open
